position_y 0
END map_1

BEGIN player
component render
component control
position_x 0
position_y 0
speed 1.5
END player

BEGIN map_1_render
texture_path assets/textures/map_1.bmp
END map_1_render

BEGIN player_render
layer 0
texture_path assets/textures/player.bmp
scale 2
END player_render