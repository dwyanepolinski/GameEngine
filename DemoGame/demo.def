BEGIN __GAME__
fps_limit 60
init_scene map_1
window_title DemoGame
END __GAME__

BEGIN map_1
entity player
component render
position_x 0
position_y 0
cam_size 0.9
END map_1

BEGIN player
component render
component control
position_x 100
position_y 100
speed 3
master 1
END player

BEGIN map_1_render
texture_path assets/textures/map_1.bmp
END map_1_render

BEGIN player_render
layer 0
texture_path assets/textures/player/player_r.bmp
scale 2
END player_render